<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/display_result"
            android:layout_margin="20dp"
            android:padding="15dp"
            android:textStyle="bold"
            android:textSize="20sp"
            android:hint="Result"
            android:background="#FDF171"/>
        <EditText
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:id="@+id/edit_first_value"
            android:layout_below="@+id/display_result"
            android:layout_margin="20dp"
            android:maxLength="5"
            android:inputType="number"
            android:singleLine="true"
            android:imeOptions="actionNext"
            android:hint="Enter First Value"/>
        <EditText
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:id="@+id/edit_second_value"
            android:layout_below="@+id/edit_first_value"
            android:layout_margin="20dp"
            android:maxLength="5"
            android:inputType="number"
            android:singleLine="true"
            android:hint="Enter First Value"/>
        <Button
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/addition"
            android:layout_below="@+id/edit_second_value"
            android:textAllCaps="false"
            android:layout_marginLeft="20dp"
            android:layout_alignParentLeft="true"
            android:text="Add"/>
        <Button
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/subtract"
            android:layout_below="@+id/edit_second_value"
            android:textAllCaps="false"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/addition"
            android:text="Subtract"/>
        <Button
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/division"
            android:layout_below="@+id/addition"
            android:textAllCaps="false"
            android:layout_marginLeft="20dp"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="10dp"
            android:text="Division"/>
        <Button
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/multiply"
            android:layout_below="@+id/subtract"
            android:textAllCaps="false"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/addition"
            android:layout_marginTop="10dp"
            android:text="Multiply"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/clear_data"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/multiply"
            android:layout_marginTop="10dp"
            android:text="Clear"/>

    </RelativeLayout>

</RelativeLayout>